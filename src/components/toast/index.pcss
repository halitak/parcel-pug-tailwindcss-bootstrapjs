.toast {
  --bs-toast-max-width: 350px;
  --bs-toast-bg: rgba(255, 255, 255, 0.85);
  @apply w-[--bs-toast-max-width] max-w-full pointer-events-auto bg-[--bs-toast-bg] bg-clip-padding border rounded shadow;
}
.toast-header {
  @apply flex items-center py-2 px-3 bg-clip-padding bg-white border-b rounded-t;
}
.toast-body {
  @apply p-3 break-words;
}
.toast:not(.show) {
  @apply hidden;
}
.toast.showing {
  opacity: 0;
}
